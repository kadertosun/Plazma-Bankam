<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/yakin"

            android:textColor="#ffffff"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/Yakinadsoyad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="51dp"
            android:hint="Ad-Soyad" />

        <EditText
            android:id="@+id/Yakiniletisim"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="106dp"
            android:hint="Telefon Numarası"
            android:inputType="phone" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="172dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/bilgi"

            android:textColor="#ffffff"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/hastaAd"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="223dp"
            android:hint="Ad-Soyad" />

        <EditText
            android:id="@+id/hastaYas"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="281dp"
            android:hint="Yaş"
            android:inputType="number" />

        <EditText
            android:id="@+id/cinsiyettxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="346dp"
            android:hint="Cinsiyet Giriniz" />


        <EditText
            android:id="@+id/kan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="409dp"
            android:hint="Kan Grubu Giriniz" />

        <EditText
            android:id="@+id/il"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="468dp"
            android:hint="İl Giriniz" />

        <EditText
            android:id="@+id/ilce"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="537dp"
            android:hint="İlçe Giriniz" />

        <Button
            android:id="@+id/Kayitbtn"
            android:layout_width="408dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="591dp"
            android:background="@drawable/kaydetkirmizi"

            android:textColor="#ffffff"
            android:textSize="35sp" />

    </RelativeLayout>
</ScrollView>